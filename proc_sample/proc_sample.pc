void select_tuple()
{
/* --------------------------------------------------------------------------
   Retrieve the current maximum employee number
-------------------------------------------------------------------------- */
EXEC SQL BEGIN DECLARE SECTION;
   varchar v_acc_number[100];
   varchar v_acc_balance[100];
   varchar v_acc_date[100];
   varchar v_acc_user[100];

