            break;
        } else if (sqlca.sqlcode < 0) {  // SQL 오류
            printf("SQL 오류 발생: %s\n", sqlca.sqlerrm.sqlerrmc);
            break;
        }

        // 데이터 처리
        db_id.arr[db_id.len] = '\0';
